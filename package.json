{
  "name": "cfv-metrics-agent",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "description": "AI Agent for gathering accurate CFV Formula metrics from multiple data sources",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/index.ts",
    "test:standalone": "tsx src/test-standalone.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPatterns=unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPatterns=integration",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage --maxWorkers=2",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "setup": "./scripts/setup-api-keys.sh",
    "validate": "./scripts/validate-keys.py",
    "register": "./scripts/auto-register.py"
  },
  "keywords": [
    "cfv",
    "cryptocurrency",
    "valuation",
    "agent",
    "copilot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@coingecko/coingecko-mcp": "^2.5.0",
    "@github/copilot-sdk": "^0.1.20",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@sentry/node": "^7.91.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "axios": "^1.13.4",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.9.2",
    "mysql2": "^3.16.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {

    "@types/node": "^25.2.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
